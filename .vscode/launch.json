{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Project Root",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
      "args": ["${workspaceRoot}/index.ts"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }, {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
